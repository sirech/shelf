{
  "name": "shelf",
  "version": "0.0.1",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "[ \"$NODE_ENV\" != \"production\" ] && npm run hot || npm run build",
    "hot": "REACT_ON_RAILS_ENV=hot webpack-dev-server --hot --config webpack.hot.js",
    "build": "webpack --progress --config webpack.build.js",
    "test": "jest"
  },
  "author": "Mario Fernandez",
  "hops": {
    "locations": [
      "/"
    ],
    "template": "./template.html",
    "initialData": {}
  },
  "eslintConfig": {
    "extends": "./.eslintrc"
  },
  "stylelint": {
    "extends": "./node_modules/hops/etc/.stylelintrc"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.(css|less)$": "<rootDir>/config/jest/CSSStub.js"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "hops": "1.0.0",
    "react-redux-form": "0.14.6",
    "react-addons-update": "15.3.2",
    "react-addons-css-transition-group": "15.3.2",
    "react-modal-bootstrap": "1.1.0",
    "redux-merge-reducers": "0.0.2",
    "normalizr": "2.2.1",
    "validator": "5.7.0"
  },
  "devDependencies": {
    "babel-jest": "*",
    "babel-polyfill": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "jest": "16.0.1",
    "nock": "*",
    "react-test-renderer": "*",
    "redux-mock-store": "*"
  }
}
