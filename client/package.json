{
  "name": "shelf",
  "version": "0.0.1",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "[ \"$NODE_ENV\" != \"production\" ] && npm run hot || npm run build",
    "hot": "hops serve",
    "build": "hops build",
    "test": "jest"
  },
  "author": "Mario Fernandez",
  "hops": {
    "locations": [
      "/"
    ],
    "template": "./template.html",
    "initialData": {}
  },
  "eslintConfig": {
    "extends": "./.eslintrc"
  },
  "stylelint": {
    "extends": "./node_modules/hops/etc/.stylelintrc"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.(css|less)$": "<rootDir>/config/jest/CSSStub.js"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "hops": "2.1.0",
    "normalizr": "2.2.1",
    "react-addons-css-transition-group": "15.3.2",
    "react-addons-update": "15.3.2",
    "react-modal-bootstrap": "1.1.0",
    "react-redux-form": "1.4.3",
    "recompose": "^0.21.0",
    "redux-merge-reducers": "0.0.2",
    "validator": "5.7.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "*",
    "babel-polyfill": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "eslint": "^3.12.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-jsx": "^3.2.0",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "16.0.1",
    "nock": "*",
    "react-test-renderer": "*",
    "redux-mock-store": "*"
  }
}
