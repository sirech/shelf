{
  "name": "shelf",
  "version": "0.0.1",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "[ \"$NODE_ENV\" != \"production\" ] && npm run watch || npm run build",
    "hot": "REACT_ON_RAILS_ENV=hot webpack-dev-server --hot --config node_modules/hops/etc/webpack.hot.js",
    "watch": "webpack-dev-server --hot --config node_modules/hops/etc/webpack.watch.js",
    "build": "webpack --progress --config node_modules/hops/etc/webpack.build.js",
    "test": "mocha-webpack --require source-map-support/register --reporter hops/reporter --webpack-config node_modules/hops/etc/webpack.test.js \"src/**/*.test.js*\""
  },
  "author": "Mario Fernandez",
  "hops": {
    "locations": [
      "/"
    ],
    "template": "./template.html",
    "initialData": {}
  },
  "eslintConfig": {
    "extends": "./.eslintrc"
  },
  "stylelint": {
    "extends": "./node_modules/hops/etc/.stylelintrc"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "hops": "1.0.0-beta.8",
    "react-redux-form": "0.14.4",
    "react-bootstrap-modal": "3.0.0",
    "react-addons-update": "15.3.2",
    "normalizr": "2.2.1"
  }
}
